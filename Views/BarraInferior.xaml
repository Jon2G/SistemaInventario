<UserControl x:Class="Inventario.Views.BarraInferior"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inventario.Views"
             mc:Ignorable="d"  d:DesignWidth="800" Background="DodgerBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button HorizontalAlignment="Left" Margin="0,0,10,0" Grid.Column="0" Background="#1E74FF" Click="Back_Click">
            <Image Height="30" Source="/Inventario;component/Images/back.png" Margin="3"/>
        </Button>
        
        <Label Grid.Column="1" Content="Fecha y hora" HorizontalAlignment="Left" FontWeight="Bold" Foreground="White" FontSize="18"/>
        <Label Grid.Column="2" Content="Rol lectura" HorizontalAlignment="Right" FontWeight="Bold" Foreground="White" FontSize="18"/>
    </Grid>
</UserControl>
