<controls:CloseReasonWindow
    xmlns:controls="clr-namespace:Kit.WPF.Controls;assembly=Kit.WPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Inventario.Views" WindowStartupLocation="CenterOwner"
        xmlns:RangoFechas="clr-namespace:Kit.WPF.Controls.RangoFechas;assembly=Kit.WPF" x:Class="Inventario.Views.FechasReporte"
        mc:Ignorable="d" Background="White" WindowStyle="SingleBorderWindow"
        Title="Nuevo reporte" ResizeMode="NoResize" Height="231" Width="539">
    <StackPanel >
        <TextBlock Margin="10" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Nuevo Reporte"  FontSize="36" FontWeight="Bold" Foreground="Black" />
        <RangoFechas:DateRangeHorizontal x:Name="SelectorFechas" />
        <Button Margin="10" HorizontalAlignment="Stretch"   VerticalAlignment="Center" Content="Confirmar" FontSize="20" Background="{StaticResource ColorConfirmar}" Click="Button_Click" FontWeight="Bold" />
    </StackPanel>
</controls:CloseReasonWindow>
